<h1 class="title">Thêm sản phẩm mới</h1>
<form
  action="/products/create-product"
  method="post"
  enctype="multipart/form-data"
  class="form__create__product"
>
  <div>
    <label>Tên sản phẩm:</label>
    <input type="text" name="name" />
  </div>
  <div>
    <label>Loại sản phẩm:</label>
    <select name="category">
      <option value="ghe-sofa-dai">Ghế Sofa dài</option>
      <option value="ghe-sofa-don">Ghế Sofa đơn</option>
      <option value="ban-dai">Bàn dài</option>
      <option value="ban-tron">Bàn tròn</option>

    </select>
  </div>
  <div>
    <label>Mô tả:</label>
    <textarea type="text" name="des"></textarea>
  </div>
  <div>
    <label>Giá(1.000 vnđ):</label>
    <input type="text" name="price" />
  </div>
  <div>
    <label>Giảm giá(%):</label>
    <input type="text" name="sale" />
  </div>

  <div name="size" class="gr__item__size">
    <h4>Kích thước(m)</h4>
    <div>
      <label>Chiều dài:</label>
      <input type="text" name="size__length" />
    </div>
    <div>
      <label>Chiều rộng:</label>
      <input type="text" name="size__width" />
    </div>
    <div>
      <label>Chiều cao:</label>
      <input type="text" name="size__height" />
    </div>
  </div>

  <div>
    <label>Ảnh sản phẩm:</label>
    <input type="file" name="image-product" />
  </div>
  <button type="submit" class="btn btn__primary">
    <i class="icon fa-solid fa-plus"></i>Thêm sản phẩm</button>

</form>